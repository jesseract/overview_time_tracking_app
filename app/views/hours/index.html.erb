<p id="notice"><%= notice %></p>

<h1>Hours</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Developer</th>
      <th>Date</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td><%= hour.project_id %></td>
        <td><%= hour.developer_id %></td>
        <td><%= hour.worked_on %></td>
        <td><%= hour.duration %></td>
        <td><%= link_to 'Show', hour %></td>
        <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
        <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hours', new_hour_path %> |
<%= link_to 'Projects', projects_path %> |
<%= link_to 'Developers', developers_path %> |

<p><%= link_to 'Logout', logout_path %></p>




